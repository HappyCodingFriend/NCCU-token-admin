<div class="container-fluid">
    <br>
    <h1>交易明細</h1>
    <table class="table">
        <thead>
            <tr>
                <th>TxHash</th>
                <th>From</th>
                <th>Point Address</th>
            </tr>
        </thead>
        <tbody id="list">
            {{#each logs}}
            <tr>
                <th><a href="/transaction/{{txhash}}">{{txhash}}</a></th>
                <th><a href="/logs/from/{{from_addr}}">{{from_addr}}</a></th>
                <th><a href="/logs/point/{{point}}">{{point}}</a></th>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script src="./javascripts/logs.js"></script>