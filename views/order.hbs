<div class="container-fluid">
    <div class="col-md-4 card">
        <h2>交易點數</h2>
        <hr>
        <div class="col-md-6">
            <div class="form-group">
                <label for="token1">點數1</label>
                <input class="form-control" id="token1" type="text">
            </div>
            <div class="form-group">
                <label for="value1">數量</label>
                <input class="form-control" id="value1" type="number" min="0" value="0">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="token2">點數2</label>
                <input class="form-control" id="token2" type="text">
            </div>
            <div class="form-group">
                <label for="value2">數量</label>
                <input class="form-control" id="value2" type="number" min="0" value="0">
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group" style="margin:20px 0 30px 0;">
                <label for="deadline">到期日</label>
                <input type="datetime-local" class="form-control" id="deadline">
            </div>
            <div class="form-group" style="margin-bottom:30px;">
                <label for="keyfile">輸入憑證檔案(keyfile)</label>
                <input type="file" class="form-control" id="keyfile">
            </div>
            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#inpwd">發行</button>
            <!-- Modal -->
            <div class="modal fade" id="inpwd" role="dialog">
                <div class="modal-dialog modal-sm">
                    <!-- Modal content-->
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                            <h4 class="modal-title">輸入憑證密碼</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <input type="password" class="form-control" id="pwd">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-success" id="issue">確認</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-7 card detail">
        <h2>訂單資料</h2>
        <hr>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order Address</th>
                    <th>Owner</th>
                </tr>
            </thead>
            <tbody id="list">
                {{#each orders}}
                <tr>
                    <th>{{address}}</th>
                    <th>{{owner}}</th>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
</div>

<script src="./javascripts/order.js"></script>
<script src="./javascripts/web3.min.js"></script>
<script src="./javascripts/signtx.js"></script>